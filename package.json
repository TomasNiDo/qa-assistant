{
  "name": "qa-assistant",
  "version": "0.1.0",
  "private": true,
  "description": "Local AI-powered QA Assistant desktop app",
  "main": "out/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "npm run rebuild:native",
    "rebuild:native": "electron-rebuild -f -w better-sqlite3",
    "seed:sample": "electron scripts/seed-sample.cjs",
    "test": "vitest run",
    "typecheck": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p src/renderer/tsconfig.json",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@google/genai": "^1.18.0",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.4.5",
    "playwright": "^1.58.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "react-toastify": "^11.0.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.3",
    "electron": "^33.2.0",
    "electron-vite": "^2.3.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.4.1",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.4.11",
    "vitest": "^1.6.0"
  }
}
